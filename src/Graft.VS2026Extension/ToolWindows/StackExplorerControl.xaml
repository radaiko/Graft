<UserControl x:Class="Graft.VS2026Extension.ToolWindows.StackExplorerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Graft.VS2026Extension.ToolWindows"
             Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0">
            <Button Command="{Binding RefreshCommand}" Content="Refresh" ToolTip="Refresh stack list" />
        </ToolBar>

        <!-- Stack tree -->
        <TreeView Grid.Row="1" ItemsSource="{Binding Stacks}"
                  BorderThickness="0"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}, ConverterParameter=Invert}">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type local:StackNode}"
                                          ItemsSource="{Binding Branches}">
                    <TextBlock Text="{Binding DisplayName}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                        <Setter Property="FontWeight" Value="Bold" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type local:BranchNode}">
                    <TextBlock Text="{Binding DisplayName}" Margin="4,0,0,0" />
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>

        <!-- Loading indicator -->
        <TextBlock Grid.Row="1" Text="Loading..."
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}" />

        <!-- Error message -->
        <TextBlock Grid.Row="2" Text="{Binding ErrorMessage}"
                   Foreground="Red" Margin="4"
                   TextWrapping="Wrap"
                   Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}" />
    </Grid>
</UserControl>
